{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "moduleResolution": "node",
    "lib": ["ES2020", "DOM"],
    "types": ["node"]
  },
  "include": ["src"]
}

